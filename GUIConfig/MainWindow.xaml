<Window x:Class="GUIConfig.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MPDisplay Configuration" Name="UI" SizeToContent="WidthAndHeight" >
	<Grid DataContext="{Binding ElementName=UI}" >
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="40"/>
		</Grid.RowDefinitions>
		<TabControl SelectedIndex="-1" ItemsSource="{Binding Views}" Grid.Row="0">
			<TabControl.ItemContainerStyle>
				<Style TargetType="TabItem">
					<Setter Property="Header" Value="{Binding Title}"/>
					<Setter Property="Content" Value="{Binding}"/>
					<Setter Property="IsSelected" Value="{Binding IsSelected}" />
				</Style>
			</TabControl.ItemContainerStyle>
		</TabControl>
		<Button Content="Cancel" HorizontalAlignment="Right" VerticalAlignment="Bottom" Grid.Row="1" Height="30" Width="58" Margin="0,0,6,6" Click="Button_Cancel_Click"/>
		<Button Content="Save" HorizontalAlignment="Right" VerticalAlignment="Bottom" Grid.Row="1" Height="30" Width="58" Margin="0,0,69,6" Click="Button_Save_Click" />
	</Grid>
</Window>
