<UserControl x:Class="GUISkinFramework.Editor.PropertyEditors.IntMinMaxValueEditor"
             xmlns:Controls="clr-namespace:MPDisplay.Common.Controls;assembly=MPDisplay.Common" 
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             Name="UI" Width="Auto">

	<Grid DataContext="{Binding ElementName=UI}">
		<Controls:IntegerUpDown Margin="1" Value="{Binding Value, Mode=TwoWay,ElementName=UI}" Minimum="{Binding MinValue, Mode=OneWay}" Maximum="{Binding MaxValue, Mode=OneWay}"   />
	</Grid>

</UserControl>
