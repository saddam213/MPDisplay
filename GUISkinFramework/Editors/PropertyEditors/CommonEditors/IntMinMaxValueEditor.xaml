<UserControl x:Class="GUISkinFramework.Editors.IntMinMaxValueEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:implementation="clr-namespace:MPDisplay.Common.Controls;assembly=MPDisplay.UICommon"
             Name="UI" Width="Auto">

	<Grid DataContext="{Binding ElementName=UI}">
		<implementation:IntegerUpDown Margin="1" Value="{Binding Value, Mode=TwoWay,ElementName=UI}" Minimum="{Binding MinValue, Mode=OneWay}" Maximum="{Binding MaxValue, Mode=OneWay}"   />
	</Grid>

</UserControl>
