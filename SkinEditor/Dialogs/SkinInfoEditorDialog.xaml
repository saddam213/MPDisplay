<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:implementation="clr-namespace:MPDisplay.Common.Controls.PropertyGrid;assembly=MPDisplay.UICommon"
        x:Class="SkinEditor.Dialogs.SkinInfoEditorDialog"
        Title="SkinInfoEditorDialog" Height="300" Width="300" Name="UI">
    <Grid DataContext="{Binding ElementName=UI}" >

        <implementation:PropertyGrid SelectedObject="{Binding SkinInfo}" Margin="5,5,5,47"/>
        <Button Content="OK" HorizontalAlignment="Right" Height="37" Margin="0,0,84,5" VerticalAlignment="Bottom" Width="76" Click="Button_Ok_Click"/>
        <Button Content="Cancel" HorizontalAlignment="Right" Height="37" Margin="0,0,5,5" VerticalAlignment="Bottom" Width="76" Click="Button_Cancel_Click"/>

    </Grid>
</Window>
