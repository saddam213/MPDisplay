<baseViews:EditorViewModel
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:baseViews="clr-namespace:SkinEditor.Themes"
    xmlns:imageEditor="clr-namespace:GUISkinFramework.Editors;assembly=GUISkinFramework"
    x:Class="SkinEditor.Views.ImageEditorView" 
             mc:Ignorable="d" 
             d:DesignWidth="1280" d:DesignHeight="720" x:Name="UI"  >
   

    <Grid DataContext="{Binding ElementName=UI}">
        <imageEditor:ImagePicker SkinInfo="{Binding SkinInfo}" Height="Auto" Width="Auto" />
    </Grid>
</baseViews:EditorViewModel>
